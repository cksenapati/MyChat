<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/tw__solid_white"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_participant_profile_pic"
        android:elevation="10dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_gravity="center_vertical"
        android:thicknessRatio="1.9"


        >

        <ImageView
            android:layout_width="@dimen/participant_profile_pic"
            android:layout_height="@dimen/participant_profile_pic"
            android:id="@+id/image_view_friend_profile_pic" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_horizontal_margin"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/text_view_friend_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/small_text"
            android:textColor="@android:color/black"
            android:gravity="top"
            android:id="@+id/text_view_friend_email"/>


    </LinearLayout>

    
    <ImageView
        android:id="@+id/image_view_add_friend"
        android:layout_width="@dimen/margin_normal"
        android:layout_height="@dimen/margin_normal"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:src="@drawable/ic_added"
        />

    <TextView
        android:id="@+id/text_view_extra_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"/>


</LinearLayout>
