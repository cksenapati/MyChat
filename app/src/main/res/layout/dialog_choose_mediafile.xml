<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    >

    <ImageButton
        android:id="@+id/image_button_choose_imagefile"
        android:background="@android:color/transparent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingRight="20dp"
        android:src="@drawable/ic_image_upload"/>

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/image_button_choose_videofile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingRight="20dp"
        android:src="@drawable/ic_video_upload"/>


    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/image_button_choose_audiofile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingRight="20dp"
        android:src="@drawable/ic_audio_upload"/>


</LinearLayout>
