<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_chat_profile_pic"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"

        android:layout_gravity="center_vertical"
        android:thicknessRatio="1.9">

        <ImageView
            android:layout_width="@dimen/chat_profile_pic"
            android:layout_height="@dimen/chat_profile_pic"
            android:id="@+id/image_view_chat_profile_pic" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/list_item_height"
        android:paddingLeft="16dp"
        android:id="@+id/linear_layout_chat_details"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="@dimen/big_text"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/chat_name_text_view"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/medium_text"
            android:textColor="@android:color/black"
            android:gravity="top"
            android:id="@+id/chat_last_message_text_view"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:paddingLeft="16dp"
        android:id="@+id/linear_layout_more_about_chat"
        >

        <TextView
            android:id="@+id/chat_last_message_receive_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="@dimen/small_text" />
        <TextView
            android:id="@+id/no_of_new_messages_text_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text" />


    </LinearLayout>

</LinearLayout>
